{
  "info": {
    "name": "Forgot Password Flow",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Forgot/Reset password requests for JustStock UI backend"
  },
  "item": [
    {
      "name": "Forgot Password",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{base_url}}/api/auth/forgot-password",
          "host": ["{{base_url}}"],
          "path": ["api","auth","forgot-password"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"oop@gmail.com\"\n}"
        },
        "description": "Returns { ok: true }. In testing, set EXPOSE_RESET_TOKEN=1 to also receive { resetToken }."
      }
    },
    {
      "name": "Reset Password",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{base_url}}/api/auth/reset-password",
          "host": ["{{base_url}}"],
          "path": ["api","auth","reset-password"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"oop@gmail.com\",\n  \"token\": \"{{reset_token}}\",\n  \"password\": \"Password@456\",\n  \"confirmPassword\": \"Password@456\"\n}"
        },
        "description": "Use the code received from the Forgot endpoint (testing) or email to reset."
      }
    }
  ],
  "variable": [
    { "key": "base_url", "value": "https://backend-server-11f5.onrender.com" },
    { "key": "reset_token", "value": "" }
  ]
}

